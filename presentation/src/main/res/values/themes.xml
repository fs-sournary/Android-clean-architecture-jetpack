<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>

        <!-- Window -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/nav_bar_scrim</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">@bool/use_light_status_bar</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">@bool/use_light_nav_bar</item>

        <!-- Widgets-->
        <item name="toolbarStyle">@style/Widget.AndroidACleanArchitectureJetpack.Toolbar</item>

        <item name="android:fontFamily">@font/google_sans_medium</item>
    </style>

    <style name="AppTheme" parent="Base.Theme" />

    <style name="Widget.AndroidACleanArchitectureJetpack.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:paddingEnd">8dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="popupTheme">@style/ThemeOverlay.MaterialComponents.Light</item>
        <item name="titleTextAppearance">@style/TextAppearance.AndroidACleanArchitectureJetpack.ToolbarTitle</item>
    </style>

    <style name="TextAppearance.AndroidACleanArchitectureJetpack.ToolbarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>
